<!doctype html>
<html lang="en">
  <head>
    <title>Inscription</title>
    {% include 'includecss.html.twig' %}
    {% include 'includescripts.html.twig' %}
  </head>

  <body style="background-color :#1C1F24; color:white">

    {% include 'header.html.twig' %}

    <main >

      <h1 class="d-flex justify-content-center mt-3" style="font-weight: 700; font-size:400%;">Store</h1>

      {# Recherche #}
      <div class="d-flex justify-content-center mt-5">
        <div class="rounded" style="background-color: white;">
          <button class="btn btn-custom bi bi-search"></button>
          <input type="text" name="search" id="search" placeholder="Search libraries">
        </div>
        <button class="btn btn-custom ms-3 bi bi-card-image" id="Scene"></button>
        <button class="btn btn-custom ms-3 bi bi-emoji-smile" id="Character"></button>
        <button class="btn btn-custom ms-3 bi bi-dice-5" id="Item"></button>
        <button class="btn btn-custom ms-3 bi bi-palette" id="Image and Police"></button>
      </div>

      {# Libraries #}
      <div class="container">
        <div class="row">
          {% for library in libraries %}
          <div class="col-6 col-lg-3 p-1">
            <div class="card" style="">
              <a href="" class="overflow-hidden" title="Open library">
                <img class="card-img-top zoom-hover" src="/media/img/{{library.image}}.png" alt="project_image" style="aspect-ratio: 1.2; object-fit: cover;">
              </a>
              <div class="card-body" style="height: 6.2rem; overflow:hidden;" title={{library.title}}>
                <h5 class="card-title">{{library.title}}</h5>
                <p class="card-text">{{library.description}}</p>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
     
      

    </main>
    
  </body>

</html>
