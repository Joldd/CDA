<!doctype html>
<html lang="en">
  <head>
    <title>Login</title>
    {% include 'includecss.html.twig' %}
    {% include 'includescripts.html.twig' %}
  </head>

  <body style="background-color :#1C1F24; color:white">

    {% include 'header.html.twig' %}

    <main>
      <h1 class="d-flex justify-content-center" style=" padding-top:5%; font-weight: 700; font-size:400%;">Login</h1>

      <div class="d-flex justify-content-center" style=" padding-top:5%;">
        {% if message is defined %}
        <div class="d-flex justify-content-center mt-3" style="color:red">           
          <p>{{message}}</p>
        </div>
        {% endif %}
        <form class="" action="/login" method="post" >
          <table >
            <tr>
                <div class="form-floating mt-3">
                  <input class="form-control" name="mail" type="text" placeholder="mail" required>
                  <label style="color: gray;" for="mail">Email</label>
                </div>
            </tr>
            <tr>
                <div class="form-floating mt-3">
                  <input class="form-control" name="password" type="text" placeholder="password" required>
                  <label style="color: gray;" for="password">Password</label>
                </div>
            </tr>
          </table>
          <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-lg btn-custom" type="submit">Login</button>
          </div>
        </form>
      </div>

    </main>
    
  </body>

</html>