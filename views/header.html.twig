<nav class="navbar" style="background-color :#464646">

    <div class="m-2">
        <a href="/">
            <img src="/static/img/logo.png" alt="Logo" height="100">
        </a>
    </div>

    <h2>
        Seccia Assets Store
    </h2>
    {% if userSession is defined %}
        {% if userSession.type == 0 %}
            <div>
                <a href="/" id="store" class="btn btn-custom m-3">Store</a>
                <a href="/libraries/history" id="libraries" class="btn btn-custom m-3">Purchase History</a>
