                </a>
            </div>
        {% else %}
            <div>
                <a href="/" id="store" class="btn btn-custom m-3">Store</a>
                <a href="/libraries" id="libraries" class="btn btn-custom m-3">My libraries</a>
                <a href="/profile" title="Profil" id="profile" class="p-1 btn btn-custom m-3">
                    {% if userSession.image|length > 0 %}
                        <td><img src="/media/profile/{{userSession.image}}.png" alt="image" height="30"></td>
                    {% else %}
                        <td><img src="/static/img/profile.png" alt="image" height="30"></td>
